@model fpv_info.Models.Event
@{
        ViewBag.Title = "Удаления события";
}
<h2>@Model.Title_ru</h2>
<h2>@Model.Title_en</h2>
<h2>@Model.EventDate</h2>
<div>
    <div>
        <dl class="dl-horizontal">
            <dt>Текст русский</dt>
            <dd>@Model.Description_ru</dd>

            <dt>Текст eng</dt>
            <dd>@Model.Description_en</dd>
        </dl>
    </div>
    <div>
        <form asp-controller="eventsManager" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
